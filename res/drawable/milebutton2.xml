<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"
          android:drawable="@drawable/mile2" /> <!-- checked -->
    <item android:state_checked="false"
          android:drawable="@drawable/mile2us" /> <!-- unchecked -->
    <item android:state_pressed="true"
          android:drawable="@drawable/mile2" /> <!-- pressed -->
    <item android:state_focused="true"
          android:drawable="@drawable/mile2" /> <!-- focused -->
    <item android:state_hovered="true"
          android:drawable="@drawable/mile2" /> <!-- hovered -->
    <item android:drawable="@drawable/mile2us" /> <!-- default -->
</selector>