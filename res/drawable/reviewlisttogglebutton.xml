<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   
    <item android:state_checked="true"
          android:drawable="@drawable/dropup" /> <!-- checked -->
    <item android:state_checked="false"
          android:drawable="@drawable/dropdown" /> <!-- unchecked -->
    <item android:state_pressed="true"
          android:drawable="@drawable/dropup" /> <!-- pressed -->
    <item android:state_focused="true"
          android:drawable="@drawable/dropup" /> <!-- focused -->
    <item android:state_hovered="true"
          android:drawable="@drawable/dropup" /> <!-- hovered -->
    <item android:drawable="@drawable/dropdown" /> <!-- default -->
</selector>